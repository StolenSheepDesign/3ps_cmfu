    <template title="3ps_cmfu_cmcontrol"><![CDATA[<h3 class="sectionHeader">{xen:phrase 3ps_cmfu_x_markup, 'title={$title}'}</h3>
	<xen:controlunit label="{xen:phrase 3ps_cmfu_users_current_x_markup, 'title={$title}'}">{xen:raw $currentMarkupRender}</xen:controlunit>
	<xen:checkboxunit label="{xen:phrase 3ps_cmfu_x_text_effects, 'title={$title}'}">
		<xen:option name="3ps_cmfu_options[{$titleCode}][bold]" selected="{$userOptions.bold}">{xen:phrase 3ps_cmfu_apply_bold_effect_to_x, 'title={$title}'}</xen:option>
		<xen:option name="3ps_cmfu_options[{$titleCode}][italic]" selected="{$userOptions.italic}">{xen:phrase 3ps_cmfu_apply_italic_effect_to_x, 'title={$title}'}</xen:option>
		<xen:option name="3ps_cmfu_options[{$titleCode}][underline]" selected="{$userOptions.underline}">{xen:phrase 3ps_cmfu_underline_x, 'title={$title}'}</xen:option>
		<xen:option name="3ps_cmfu_options[{$titleCode}][strike]" selected="{$userOptions.strike}">{xen:phrase 3ps_cmfu_strike_through_x, 'title={$title}'}</xen:option>
		<xen:option name="3ps_cmfu_options[{$titleCode}][overline]" selected="{$userOptions.overline}">{xen:phrase 3ps_cmfu_overline_x, 'title={$title}'}</xen:option>
		<xen:option name="3ps_cmfu_options[{$titleCode}][enable_text_colour]" selected="{$userOptions.enable_text_colour}" label="{xen:phrase 3ps_cmfu_enable_x_colour, 'title={$title}'}">
			<xen:select name="3ps_cmfu_options[{$titleCode}][text_colour]" value="{$userOptions.text_colour}">
				<xen:foreach loop="$colourList" key="$colourName" value="$colour">
					<xen:option style="color: {$colour};" value="{$colour}" selected="{$userOptions.text_colour}">{$colourName}</xen:option>
				</xen:foreach>
			</xen:select>
		</xen:option>
		<xen:option name="3ps_cmfu_options[{$titleCode}][enable_font_face]" selected="{$userOptions.enable_font_face}" label="{xen:phrase 3ps_cmfu_enable_x_font, 'title={$title}'}">
			<xen:select name="3ps_cmfu_options[{$titleCode}][font_face]" value="{$userOptions.font_face}" label="{xen:phrase 3ps_cmfu_x_font, 'title={$title}'}: ">
				<xen:foreach loop="$fontList" key="$fontId" value="$fontValue">
					<xen:option style="font-family: {xen:raw $fontValue.fullname};" value="{$fontId}" selected="{$userOptions.font_face}">{$fontValue.name}</xen:option>
				</xen:foreach>
			</xen:select>
		</xen:option>
	</xen:checkboxunit>

	<xen:checkboxunit label="{xen:phrase 3ps_cmfu_x_background_and_borders, 'title={$title}'}">
		<xen:option name="3ps_cmfu_options[{$titleCode}][enable_background_colour]" selected="{$userOptions.enable_background_colour}" label="{xen:phrase 3ps_cmfu_enable_x_background_colour, 'title={$title}'}">
			<xen:select name="3ps_cmfu_options[{$titleCode}][background_colour]" value="{$userOptions.background_colour}" label="{xen:phrase 3ps_cmfu_background_colour}:">
				<xen:foreach loop="$colourList" key="$colourName" value="$colour">
					<xen:option style="color: {$colour};" value="{$colour}" selected="{$userOptions.background_colour}">{$colourName}</xen:option>
				</xen:foreach>
			</xen:select>
		</xen:option>
		<xen:option name="3ps_cmfu_options[{$titleCode}][border]" selected="{$userOptions.border}" label="{xen:phrase 3ps_cmfu_enable_x_border, 'title={$title}'}">
			<xen:disabled>
				<xen:checkbox>
					<xen:option name="3ps_cmfu_options[{$titleCode}][enable_border_colour]" selected="{$userOptions.enable_border_colour}" label="{xen:phrase 3ps_cmfu_enable_x_border_colour, 'title={$title}'}">
						<xen:select name="3ps_cmfu_options[{$titleCode}][border_colour]" value="{$userOptions.border_colour}" label="{xen:phrase 3ps_cmfu_border_colour}">
							<xen:foreach loop="$colourList" key="$colourName" value="$colour">
								<xen:option style="color: {$colour};" value="{$colour}" selected="{$userOptions.border_colour}">{$colourName}</xen:option>
							</xen:foreach>
						</xen:select>
					</xen:option>
					<xen:option name="3ps_cmfu_options[{$titleCode}][enable_border_style]" selected="{$userOptions.enable_border_style}" label="{xen:phrase 3ps_cmfu_enable_x_border_style, 'title={$title}'}">
						<xen:select name="3ps_cmfu_options[{$titleCode}][border_style]" value="{$userOptions.border_style}" label="{xen:phrase 3ps_cmfu_border_style}">
							<xen:options source="$borderList" />
						</xen:select>
					</xen:option>
				</xen:checkbox>
			</xen:disabled>
		</xen:option>
	</xen:checkboxunit>]]></template>
